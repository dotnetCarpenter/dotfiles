#!/usr/bin/env bash

# transmission
alias t-start='sudo service transmission-daemon start'
alias t-stop='sudo service transmission-daemon stop'
alias t-reload='sudo service transmission-daemon reload'
alias t-restart='sudo service transmission-daemon reload'
alias t-list='transmission-remote --auth 'transmission:transmission' -l'
alias t-basicstats='transmission-remote --auth 'transmission:transmission' -st'
alias t-fullstats='transmission-remote --auth 'transmission:transmission' -si'
alias t-add='$DEFAULT_DOTFILES_DIR/../transmission/.transmission-add'
alias t-remove='$DEFAULT_DOTFILES_DIR/../transmission/.transmission-remove'
alias t-flush='transmission-remote --auth 'transmission:transmission' -t all -r'
alias t-settings='sudo nano /etc/transmission-daemon/settings.json'
